<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp">
    <ImageView
        android:id="@+id/res_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:src="@drawable/default_cuisine"
        android:contentDescription="@string/app_name"/>
    <RelativeLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/res_photo">

        <TextView
            android:id="@+id/res_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/semi_large_text_size"
            android:textColor="@color/grey_text_color"
            android:layout_marginRight="60dp">

        </TextView>
        <RelativeLayout
            android:id="@+id/rating_container"
            android:layout_width="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/res_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/white"
                >

            </TextView>
        </RelativeLayout>
        <TextView
            android:id="@+id/locality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text_size"
            android:layout_below="@+id/res_name"
            android:textColor="@color/grey_hint_color">

        </TextView>
        <TextView
            android:id="@+id/cuisines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text_size"
            android:layout_marginRight="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@+id/locality"
            android:textColor="@color/grey_hint_color"/>
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text_size"
            android:layout_below="@+id/cuisines"
            android:layout_marginRight="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/grey_hint_color">

        </TextView>

    </RelativeLayout>



</RelativeLayout>